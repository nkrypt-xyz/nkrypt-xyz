# nkrypt.xyz Desktop - Docker Compose Environment
# Copy to .env and customize. The desktop app manages this file.

# Data directory (absolute path recommended). Subdirs: postgres, redis, minio.
# Default: <repo-root>/nkrypt-xyz-data. Made world-writable on startup by the desktop app.
DATA_DIR=/path/to/nkrypt-xyz-data

# Dependency ports (host-mapped, 9200-9299 to avoid clash with dev)
POSTGRES_PORT=9200
REDIS_PORT=9201
MINIO_PORT=9202
MINIO_CONSOLE_PORT=9203

# Application ports
WEB_SERVER_PORT=9204
WEB_CLIENT_PORT=9205

# Credentials
POSTGRES_PASSWORD=nkrypt_password
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
NK_IAM_DEFAULT_ADMIN_PASSWORD=PleaseChangeMe@YourEarliest2Day

# Web client build (server URL baked in at build time)
VITE_DEFAULT_SERVER_URL=http://localhost:9204
VITE_CLIENT_APPLICATION_NAME=nkrypt-web-client

# Web server optional
NK_LOG_LEVEL=info
NK_LOG_FORMAT=json
